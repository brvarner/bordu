<div id="projects" class="bg-primary rounded p-3">
  <div class="list-group">
    <% projects.each do |project| %>
      <%= render "projects/project_select", project: project %>
    <% end %>
  </div>
  <div class="d-flex justify-content-center align-items-center">
    <%= link_to "New Project", new_project_path, class: "btn btn-danger mt-3 w-100" %>
  </div>
</div>