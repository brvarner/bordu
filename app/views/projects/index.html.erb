<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-center align-items-center mb-5">
  <h1>Projects</h1>
</div>

<div class="row">
  <div class="bg-primary w-25 col-3 d-flex justify-content-center align-items-start rounded py-5">
    <div id="projects">
      <div class="list-group">
        <% @projects.each do |project| %>
            <%= render "projects/project_select", project: project %>
        <% end %>
      </div>

      <%= link_to "New Project", new_project_path, class: "btn btn-danger mt-5" %>
      
    </div>
  </div>
  <%= render 'tasks/container' %>
</div>