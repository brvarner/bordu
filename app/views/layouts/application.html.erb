<!DOCTYPE html>
<html>
  <head>
    <title>Bordu</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag asset_path('Bordiefav.png') %>
    <%= render 'shared/font_import' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= stylesheet_link_tag 'application', 'custom', media: 'all', 'data-turbo-track': 'reload' %>
    <%= render 'shared/cdn_assets' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
    <div class="container">
      <%= render partial: 'shared/alert', alert: alert  if alert.present? %>
      <%= render partial: 'shared/notice', notice: notice if notice.present? %>
      <%= yield %>
    </div>
  </body>
</html>
