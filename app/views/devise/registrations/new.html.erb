<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs mb-3">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'form-control mb-3' }%>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "given-name", class: 'form-control mb-3' }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "family-name", class: 'form-control mb-3' }%>
    <div class="mb-3">
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password", class: 'form-control' } %>
      <div class="form-text"><%= @minimum_password_length %> characters minimum</div>
    </div>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: 'form-control mb-3' } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
